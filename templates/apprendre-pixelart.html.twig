{% extends "layout.html.twig" %}

{% block intro %}
    <div class="intro-learn-one row">
        <div class="overlay"></div>
        <div class="col-sm-12">
            <h1 class="mt0 color-white">Apprendre PixelArt</h1>
        </div>
    </div> <!-- /.intro.row -->
{% endblock %}

{% block content %}

    <div id="sideBarShareBtns" class="container-fluid">

        <div class="row">
            <ul id="shareList" class="list-unstyled">

                <li>Vitesse</li>
                <li><button class="btn btn-robot3 btn-lg speed" value="4000">1</button></li>
                <li><button class="btn btn-robot3 btn-lg speed" value="3000">2</button></li>
                <li><button class="btn btn-robot3 btn-lg speed" value="2000">3</button></li>
                <li><button class="btn btn-robot3 btn-lg speed" value="1000">4</button></li>
                <li><button class="btn btn-robot3 btn-lg speed" value="500">5</button></li><br>

                <li>Navigation</li>
                <li><button id="play" class="btn btn-robot3 btn-lg"><span class="glyphicon glyphicon-play" aria-hidden="true"></span></button></li>
                <li><button id="pause" class="btn btn-robot3 btn-lg"><span class="glyphicon glyphicon-pause" aria-hidden="true"></span></button></li>
                <li><button id="replay" class="btn btn-robot3 btn-lg"><span class="glyphicon glyphicon-repeat" aria-hidden="true"></span></button></li>

            </ul>
        </div>
    </div>
    <main>
        <section>
            <div class="container page-bgc">
                <div class="row">
                    <div class="col-sm-12">
                        <div class="title-box">
                            <h2 class="title mt0">{{ picture.title }}</h2>
                        </div>
                    </div>
                </div>


                <div class="row">
                    <div class="col-md-3">

                        <div>
                            <div class="hidden-xs hidden-sm">
                                <h2>Miniature</h2>
                                <div class="shop-box">
                                    <div class="text-center div-img"><img class="img-galery" src="{{ picture.thumb | replace({" ":"+"})  }}" alt=""></div> 
                                </div>
                            </div>


                            <h2>Palette</h2> 
                            <ul id="colors" class="list-unstyled list-inline"></ul>

                            <div class="hidden-xs hidden-sm">
                                <h2>Etapes</h2>
                                <div id="divSteps">
                                    <ul id="steps" class="list-unstyled"></ul>
                                </div>
                            </div>

                        </div>

                    </div>
                    <div class="col-md-9">
                        <div id="container-learn" ><canvas id="canvas-learn">Votre navigateur ne supporte pas canvas</canvas></div>
                    </div>

                </div>

                <div class="text-center mt4">
                    <a href="{{ path('apprentissage-pixelart') }}" class="btn btn-robot btn-lg">Choisir un autre</a>
                    <a href="{{ path('creation') }}" class="btn btn-robot btn-lg">Créer un PixelArt</a>
                </div>

            </div>
        </section>
    </main>

{% endblock %}

{% block script %}
    <script src="{{ asset('js/apprendre.js') }}"></script>
    <script >
        $(function () {
            editAjax({{ picture.idPictures }}); // on transfère l'id à notre fichier js
        });
    </script>

{% endblock %}

