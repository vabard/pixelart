{% extends 'admin/layout_admin.html.twig'%}

{% block content %}
    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-6">
                    <div class="card">
                        <div class="header">
                            <h4 class="title">Catégories</h4>
                            <p class="category">Liste des catégories de pixelart</p>
                        </div>
                        <div class="content table-responsive table-full-width">
                            <table class="table table-hover table-striped">
                                <thead>
                                    <th>ID</th>
                                    <th>Title</th>
                                    <th>Supprimer</th>
                                </thead>
                                <tbody>
                                    {% for categorie in categories %}
                                    <tr>
                                            <td>{{categorie.idCategories}}</td>
                                            <td>{{categorie.title}}</td>
                                            <td>
                                            <a href="{{ path('admin_deletecategorie', {id : categorie.idCategories}) }}"><img src="{{ asset('images/delete.jpeg') }}" width="15px" height="15px"></a>
                                            </td>

                                    </tr>
                                    {% endfor %}
      
                                </tbody>
                                
                            </table>
                            <tr>
                                <button type="button" class="btn btn-neutral btn-fill pull-right" data-toggle="modal" data-target=".bs-example-modal-md" data-backdrop="false">Ajouter une catégorie</button><br>
                            </tr>
                        </div>

                                            
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div id="modal" class="modal fade bs-example-modal-md" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel">
        <div class="modal-dialog modal-md" role="document">
            <div class="modal-content">
                    
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-md-1 col-md-offset-11">
                            <button class="close" type="button" data-dismiss="modal" aria-hidden="true">X</button>
                        </div>                    
                    </div>
                    <form id="form" method="post" action="{{ path('newcategory') }}">
                        <div class="row">
                            <div class="col-md-6 col-md-offset-3">
                                <label>Nom de la catégorie :</label><br>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 col-md-offset-3"> 
                                <input type="text" name="title" id="title"><br><br>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 col-md-offset-6">
                                <input type="submit" value="Ajouter"><br><br>
                            </div>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

